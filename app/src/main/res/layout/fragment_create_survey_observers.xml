<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewModel" type="com.martonvago.archelon.viewmodel.CreateSurveyViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.createsurvey.observers.CreateSurveyObserversFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/inputParent"
            style="@style/BaseCardViewStyle"
            app:cardElevation="@dimen/elevation_extra_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_large">

                <TextView
                    style="@style/LoginLabelStyle"
                    android:text="@string/leader"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/leaderInput"
                        style="@style/LoginEditTextStyle"
                        android:text="@={viewModel.leader.content}"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <include
            android:id="@+id/skyField"
            layout="@layout/select_field"
            app:label="@{@string/sky}"
            app:text="@{viewModel.sky.content.displayName}"/>

        <include
            android:id="@+id/precipitationField"
            layout="@layout/select_field"
            app:label="@{@string/precipitation}"
            app:text="@{viewModel.precipitation.content.displayName}"/>

        <include
            android:id="@+id/windIntensityField"
            layout="@layout/select_field"
            app:label="@{@string/windIntensity}"
            app:text="@{viewModel.windIntensity.content.displayName}"/>

        <include
            android:id="@+id/windDirectionField"
            layout="@layout/select_field"
            app:label="@{@string/windDirection}"
            app:text="@{viewModel.windDirection.content.displayName}"/>

        <include
            android:id="@+id/surfField"
            layout="@layout/select_field"
            app:label="@{@string/surf}"
            app:text="@{viewModel.surf.content.displayName}"/>

    </LinearLayout>
</layout>