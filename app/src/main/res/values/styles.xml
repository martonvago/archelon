        <item name="colorBgDark">@color/colorPrimaryDarkTeal</item>
        <item name="colorButtonPrimary">@color/colorButtonPrimaryTeal</item>
        <item name="colorButtonPrimaryClicked">@color/colorButtonPrimaryClickedTeal</item>
