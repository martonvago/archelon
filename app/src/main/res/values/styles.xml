    <style name="AppThemeGreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="colorBgPrimary">@color/colorPrimaryGreen</item>
        <item name="colorBgDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorButtonPrimary">@color/colorButtonPrimaryGreen</item>
        <item name="colorButtonPrimaryClicked">@color/colorButtonPrimaryClickedGreen</item>
        <item name="colorButtonDark">@color/colorButtonDarkGreen</item>
        <item name="colorButtonDarkClicked">@color/colorButtonDarkClickedGreen</item>
        <item name="colorBgPrimaryLight">@color/colorTag3Green</item>
