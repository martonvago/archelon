    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_horizontal</item>
    </style>

    <style name="ArrowStyle" parent="TextStyleRegular">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="BottomSheetDialogTitleStyle" parent="TextStyleRegular">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:textSize">@dimen/text_size_toolbar_title</item>
    </style>

    <!--Common-->
    <style name="TextStyleMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextStyleRegular">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextStyleDialogTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">@dimen/base_button_width</item>
        <item name="android:layout_height">@dimen/base_button_height</item>
        <item name="android:background">@drawable/rounded_button_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:elevation">@dimen/elevation_large</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="DialogButtonStyle" parent="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/dialog_button_height</item>
    </style>

    <style name="MenuButtonStyle" parent="ButtonStyle">
        <item name="android:lineSpacingMultiplier">1.26</item>
        <item name="android:layout_height">@dimen/menu_button_height</item>
        <item name="android:paddingStart">@dimen/padding_normal</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
    </style>

    <style name="MenuButtonDarkStyle" parent="MenuButtonStyle">
        <item name="android:background">@drawable/rounded_button_dark</item>
    </style>

    <style name="BaseCardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_extra_large</item>
    </style>

    <style name="LabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorBackgroundExtraLight</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="StartButtonStyle" parent="ButtonStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">@dimen/margin_extra_large</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="CreateSurveyControlsTextButton" parent="TextStyleMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/padding_extra_large</item>
        <item name="android:textColor">@color/colorTextWhite</item>
    </style>

    <style name="SelectOptionStyle" parent="TextStyleRegular">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:textSize">@dimen/text_size_toolbar_title</item>
    </style>
</resources>
