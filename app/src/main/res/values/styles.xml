        <item name="colorBgPrimary">@color/colorPrimaryRed</item>
        <item name="colorBgDark">@color/colorPrimaryDarkRed</item>
        <item name="colorButtonPrimary">@color/colorButtonPrimaryRed</item>
        <item name="colorButtonPrimaryClicked">@color/colorButtonPrimaryClickedRed</item>
